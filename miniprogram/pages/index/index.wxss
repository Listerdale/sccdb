/**index.wxss**/
/*页面整体格式*/
page {
  padding-top: 0rpx;
  background-color: #f6f6f6;
  padding-bottom: 0rpx;
}
/*顶部图片*/
.cover{
  width: 100%;
  height: 200rpx;
  position: relative;
  display: flex;
  flex-direction: column
}
/*图像信息*/
.cover Image{
  width: 100%;
  height: 200rpx;
  }
/*添加渐变效果*/
.cover .layer {
    width: 100%;
    height: 200rpx;
    margin-top: -200rpx;
    z-index: 999;
  }
/*元素间间隙*/
.blank{
  height: 60rpx;
}
/*标题第1行*/
.title {
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  font-size: 44rpx;
  margin-bottom: 40rpx;
}
/*标题第2行*/
.l_title {
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  font-size: 36rpx;
  margin-bottom: 40rpx;
}
/*标题第3行*/
.top_tip {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
  margin-bottom: 40rpx;
}
/*年份选择器*/
.yearPicker{
  font-size: 24rpx;
  font-family: PingFang SC;
  height: 50rpx;
  width: 120rpx;
  display: flex;
  justify-content: center;
  line-height: 50rpx;
}
/*元素间间隙*/
.blank2{
  width: 750rpx;
  height: 40rpx;
  border-bottom: solid grey;
  border-width: thin;
}